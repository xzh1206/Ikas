                                    <Border Width="32" Height="32" Background="#7F000000" CornerRadius="16"/>
                                    <Image x:Name="imgFlyfish" Height="32" Width="32" Source="assets/img/salmoniods-flyfish.png"/>
                                </Grid>
                                <Label x:Name="lbFlyfishName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-flyfish}" Opacity="0"/>
                            </StackPanel>
                            <Label x:Name="lbFlyfish" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]/[T]/[A]"/>
                            <Label x:Name="lbFlyfishShort" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]" Opacity="0"/>
                        </Grid>
                    </Grid>
                </Border>
                <Border x:Name="bdScrapper" Grid.Row="2" Grid.Column="2"
                        MouseEnter="BdScrapper_MouseEnter"
                        MouseLeave="BdScrapper_MouseLeave"
                        Width="127.5" Background="#7F000000" CornerRadius="8">
                    <Grid x:Name="gridScrapper" Opacity="0">
                        <Border x:Name="bdScrapperRatio" Width="0" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SalmonYellowBackground}" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                        <Grid Margin="5,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Border Width="32" Height="32" Background="#7F000000" CornerRadius="16"/>
                                    <Image x:Name="imgScrapper" Height="32" Width="32" Source="assets/img/salmoniods-scrapper.png"/>
                                </Grid>
                                <Label x:Name="lbScrapperName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-scrapper}" Opacity="0"/>
                            </StackPanel>
                            <Label x:Name="lbScrapper" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]/[T]/[A]"/>
                            <Label x:Name="lbScrapperShort" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]" Opacity="0"/>
                        </Grid>
                    </Grid>
                </Border>
                <Border x:Name="bdSteelEel" Grid.Row="4" Grid.Column="0"
                        MouseEnter="BdSteelEel_MouseEnter"
                        MouseLeave="BdSteelEel_MouseLeave"
                        Width="127.5" Background="#7F000000" CornerRadius="8">
                    <Grid x:Name="gridSteelEel" Opacity="0">
                        <Border x:Name="bdSteelEelRatio" Width="0" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SalmonYellowBackground}" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                        <Grid Margin="5,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Border Width="32" Height="32" Background="#7F000000" CornerRadius="16"/>
                                    <Image x:Name="imgSteelEel" Height="32" Width="32" Source="assets/img/salmoniods-steel-eel.png"/>
                                </Grid>
                                <Label x:Name="lbSteelEelName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-steel_eel}" Opacity="0"/>
                            </StackPanel>
                            <Label x:Name="lbSteelEel" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]/[T]/[A]"/>
                            <Label x:Name="lbSteelEelShort" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]" Opacity="0"/>
                        </Grid>    
                    </Grid>
                </Border>
                <Border x:Name="bdStinger" Grid.Row="4" Grid.Column="2"
                    MouseEnter="BdStinger_MouseEnter"
                    MouseLeave="BdStinger_MouseLeave"
                    Width="127.5" Background="#7F000000" CornerRadius="8">
                    <Grid x:Name="gridStinger" Opacity="0">
                        <Border x:Name="bdStingerRatio" Width="0" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SalmonYellowBackground}" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                        <Grid Margin="5,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Border Width="32" Height="32" Background="#7F000000" CornerRadius="16"/>
                                    <Image x:Name="imgStinger" Height="32" Width="32" Source="assets/img/salmoniods-stinger.png"/>
                                </Grid>
                                <Label x:Name="lbStingerName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-stinger}" Opacity="0"/>
                            </StackPanel>
                            <Label x:Name="lbStinger" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]/[T]/[A]"/>
                            <Label x:Name="lbStingerShort" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]" Opacity="0"/>
                        </Grid>
                    </Grid>
                </Border>
                <Border x:Name="bdMaws" Grid.Row="6" Grid.Column="0"
                        MouseEnter="BdMaws_MouseEnter"
                        MouseLeave="BdMaws_MouseLeave"
                        Width="127.5" Background="#7F000000" CornerRadius="8">
                    <Grid x:Name="gridMaws" Opacity="0">
                        <Border x:Name="bdMawsRatio" Width="0" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SalmonYellowBackground}" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                        <Grid Margin="5,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Border Width="32" Height="32" Background="#7F000000" CornerRadius="16"/>
                                    <Image x:Name="imgMaws" Height="32" Width="32" Source="assets/img/salmoniods-maws.png"/>
                                </Grid>
                                <Label x:Name="lbMawsName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-maws}" Opacity="0"/>
                            </StackPanel>
                            <Label x:Name="lbMaws" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]/[T]/[A]"/>
                            <Label x:Name="lbMawsShort" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]" Opacity="0"/>
                        </Grid>    
                    </Grid>
                </Border>
                <Border x:Name="bdGriller" Grid.Row="6" Grid.Column="2"
                        MouseEnter="BdGriller_MouseEnter"
                        MouseLeave="BdGriller_MouseLeave"
                        Width="127.5" Background="#7F000000" CornerRadius="8">
                    <Grid x:Name="gridGriller" Opacity="0">
                        <Border x:Name="bdGrillerRatio" Width="0" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SalmonYellowBackground}" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                        <Grid Margin="5,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Border Width="32" Height="32" Background="#7F000000" CornerRadius="16"/>
                                    <Image x:Name="imgGriller" Height="32" Width="32" Source="assets/img/salmoniods-griller.png"/>
                                </Grid>
                                <Label x:Name="lbGrillerName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-griller}" Opacity="0"/>
                            </StackPanel>
                            <Label x:Name="lbGriller" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]/[T]/[A]"/>
                            <Label x:Name="lbGrillerShort" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" HorizontalAlignment="Right" VerticalContentAlignment="Center" Content="x[S]" Opacity="0"/>
                        </Grid>
                    </Grid>
                </Border>
                <Border x:Name="bdDrizzler" Grid.Row="8" Grid.Column="0"
                        MouseEnter="BdDrizzler_MouseEnter"
                        MouseLeave="BdDrizzler_MouseLeave"
                        Width="127.5" Background="#7F000000" CornerRadius="8">
                    <Grid x:Name="gridDrizzler" Opacity="0">
                        <Border x:Name="bdDrizzlerRatio" Width="0" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SalmonYellowBackground}" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                        <Grid Margin="5,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Grid HorizontalAlignment="Left">
                                    <Border Width="32" Height="32" Background="#7F000000" CornerRadius="16"/>
                                    <Image x:Name="imgDrizzler" Height="32" Width="32" Source="assets/img/salmoniods-drizzler.png"/>
                                </Grid>
                                <Label x:Name="lbDrizzlerName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-drizzler}" Opacity="0"/>
