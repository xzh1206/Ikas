                </Border>
                <Border x:Name="bdTotal" Grid.Row="8" Grid.Column="2"
                        MouseEnter="BdTotal_MouseEnter"
                        MouseLeave="BdTotal_MouseLeave"
                        Width="127.5" Background="#7F000000" CornerRadius="8">
                    <Grid x:Name="gridTotal" Opacity="0">
                        <Border x:Name="bdTotalRatio" Width="0" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SalmonYellowBackground}" HorizontalAlignment="Left" IsHitTestVisible="False"/>
