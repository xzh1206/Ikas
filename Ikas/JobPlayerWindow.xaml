                                </Grid>
                                <Label x:Name="lbTotalName" FontFamily="{StaticResource splatfont_2}" Foreground="White" FontSize="12" VerticalContentAlignment="Center" Content="{DynamicResource job_player_window-defeated}" Opacity="0"/>
