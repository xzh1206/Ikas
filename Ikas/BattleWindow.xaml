<Window x:Class="Ikas.BattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ikas"
        mc:Ignorable="d"
        Title="Ikas - Battle" Height="755" Width="495" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Window.Resources>
        <BitmapImage x:Key="image_battle_regular" UriSource="/assets/img/battle-regular.png"/>
        <BitmapImage x:Key="image_battle_ranked" UriSource="/assets/img/battle-ranked.png"/>
        <BitmapImage x:Key="image_battle_league" UriSource="/assets/img/battle-league.png"/>
        <BitmapImage x:Key="image_battle_private" UriSource="/assets/img/battle-private.png"/>
        <BitmapImage x:Key="image_battle_splatfest" UriSource="/assets/img/battle-splatfest.png"/>
        <Storyboard x:Key="fade_out">
            <DoubleAnimation BeginTime="0:0:0.0" Storyboard.TargetProperty="Opacity" To="0" SpeedRatio="2"/>
        </Storyboard>
        <Storyboard x:Key="fade_in">
            <DoubleAnimation BeginTime="0:0:0.0" Storyboard.TargetProperty="Opacity" To="1" SpeedRatio="2"/>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Border CornerRadius="27">
            <Border.Background>
                <SolidColorBrush Color="#FF221F22"/>
            </Border.Background>
            <Border x:Name="bdBackgroundStrip" CornerRadius="27,27,27,27">
                <Border.Background>
                    <ImageBrush ImageSource="assets/img/bg-strips-dark.png" Stretch="None" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,300,300"/>
                </Border.Background>
            </Border>
        </Border>
        <StackPanel Orientation="Vertical" Height="715">
            <Grid Height="48" Margin="20,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="imgMode" Width="48" Height="48" Source="{StaticResource image_battle_regular}" Opacity="1"/>
                    <Label x:Name="lbRule" Content="[Rule]" FontFamily="/Ikas;component/assets/font/#Splatfont" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="36" Height="90" VerticalContentAlignment="Center" Opacity="1"/>
                </StackPanel>
                <Border x:Name="bdResult" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Background="#FF19D719" Opacity="1">
                    <Border>
                        <Border.Background>
                            <ImageBrush ImageSource="assets/img/bg-strips-small.png" Stretch="None" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,150,150"/>
                        </Border.Background>
                        <Label x:Name="lbResult" Content="Win!" FontFamily="/Ikas;component/assets/font/#Splatfont" Foreground="White" Height="60" VerticalAlignment="Center" FontSize="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="10,0,20,0" HorizontalAlignment="Left"></Label>
                    </Border>
                </Border>
            </Grid>
            <Grid Margin="25,10,25,0">
                <Border Width="208" Height="117" HorizontalAlignment="Left" CornerRadius="8" Background="Black">
                    <local:StageControl x:Name="stg" FontSize="16"/>
                </Border>
                <StackPanel x:Name="spLeague" Width ="222" Height="117" Orientation="Vertical" HorizontalAlignment="Right">
                    <Label FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="#FFDBDBDB" FontSize="24" Content="リーグパワー"/>
                    <Label x:Name="lbLeaguePower" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" FontSize="28" Content="0000.0/0000.0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,-10,0,0"/>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <Grid Height="30">
                    <Border x:Name="bdWinResult" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF19D719" Opacity="1">
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="assets/img/bg-strips-small.png" Stretch="None" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,150,150"/>
                            </Border.Background>
                            <Label Content="ノックアウト" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" Height="60" VerticalAlignment="Center" FontSize="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="20,0,10,0"></Label>
                        </Border>
                    </Border>
                    <Border HorizontalAlignment="Right">
                        <Label x:Name="lbWinEstimatedPower" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="#FFDBDBDB" FontSize="24" Content="推定 0000" HorizontalContentAlignment="Center" Margin="0,0,25,0" Height="60" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                </Grid>
                <StackPanel Orientation="Vertical" Margin="25,15,25,0">
                    <Border x:Name="bdWinPlayer1" Height="45" CornerRadius="8" Background="#7F000000">
                        <Grid Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <Label x:Name="lbWinPlayer1Level" FontFamily="/Ikas;component/assets/font/#Splatfont" Foreground="White" FontSize="26" Content="S+" Height="80" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="45" HorizontalContentAlignment="Center"/>
                                <Border x:Name="bdWinPlayer1Image" Height="36" Width="36" Background="White" CornerRadius="18" Margin="5,0,0,0" VerticalAlignment="Center"></Border>
                                <Border x:Name="bdWinPlayer1Weapon" Height="36" Width="36" Background="White" Margin="10,0,0,0" VerticalAlignment="Center"></Border>
                                <StackPanel Orientation="Vertical" Margin="7,0,0,0" VerticalAlignment="Center">
                                    <Label x:Name="lbWinPlayer1Name" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" FontSize="16" Height="40" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="0,-4,0,0" Padding="5">
                                        <TextBlock x:Name="tbWinPlayer1Name" TextTrimming="CharacterEllipsis" Width="150">わたしのなまいわロングですよ</TextBlock>
                                    </Label>
                                    <Label x:Name="lbWinPlayer1Point" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" FontSize="10" Content="0000 p" Margin="0,-12,0,0" HorizontalAlignment="Left" Padding="5,0,5,5"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="138" Height="45" VerticalAlignment="Center">
                                <Border Width="46">
                                    <Grid>
                                        <Border Height="36" Width="36" Background="#7F000000" CornerRadius="18"/>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                            <Label FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="#FFDBDBDB" FontSize="10" Content="x" Padding="0" VerticalContentAlignment="Bottom"/>
                                            <Label x:Name="lbWinPlayer1KillAndAssist" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" FontSize="12" Content="20" Padding="0" Margin="0,0,0,-1"/>
                                            <Label x:Name="lbWinPlayer1Assist" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" FontSize="10" Content="(20)" Padding="2,0,0,0" VerticalContentAlignment="Bottom"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <Border Width="46">
                                    <Grid>
                                        <Border Height="36" Width="36" Background="#7F000000" CornerRadius="18"/>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                            <Label FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="#FFDBDBDB" FontSize="10" Content="x" Padding="0" VerticalContentAlignment="Bottom"/>
                                            <Label x:Name="lbWinPlayer1Death" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" FontSize="12" Content="20" Padding="0" Margin="0,0,0,-1"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <Border Width="46">
                                    <Grid>
                                        <Border Height="36" Width="36" Background="#7F000000" CornerRadius="18"/>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                            <Label FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="#FFDBDBDB" FontSize="10" Content="x" Padding="0" VerticalContentAlignment="Bottom"/>
                                            <Label x:Name="lbWinPlayer1Special" FontFamily="/Ikas;component/assets/font/#Splatfont 2" Foreground="White" FontSize="12" Content="20" Padding="0" Margin="0,0,0,-1"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
