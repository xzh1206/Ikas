<UserControl x:Class="Ikas.StageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ikas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border x:Name="bdStage" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Background}" Opacity="1">
            <Border VerticalAlignment="Bottom" Margin="5,0,5,5" CornerRadius="8" Background="#B3000000" HorizontalAlignment="Right">
                <TextBlock x:Name="tbStage" FontFamily="/Ikas;component/assets/font/#Splatfont 2" FontSize="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=FontSize}" Foreground="#FFDBDBDB" TextTrimming="CharacterEllipsis" Padding="5,0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Content}" Margin="0,-3"/>
            </Border>
        </Border>
    </Grid>
</UserControl>
