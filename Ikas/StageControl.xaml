<UserControl x:Class="Ikas.StageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ikas"
             mc:Ignorable="d" 
             d:DesignHeight="117" d:DesignWidth="208">
    <Grid>
        <Border x:Name="bdStage" CornerRadius="8" Background="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Background}">
            <Border VerticalAlignment="Bottom" Margin="5,0,5,5" CornerRadius="8" Background="#B3000000" HorizontalAlignment="Right">
                <TextBlock x:Name="tbStage" FontFamily="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=FontFamily}" FontSize="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=FontSize}" Foreground="#FFDBDBDB" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-3" Padding="5,0" TextTrimming="CharacterEllipsis" Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Content}"/>
            </Border>
        </Border>
    </Grid>
</UserControl>
